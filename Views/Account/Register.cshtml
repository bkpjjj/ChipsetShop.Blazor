@model ChipsetShop.MVC.ViewModels.RegisterViewModel
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row" style="">

            <div class="col-md-7 mx-auto">

                <div class="billing-details">
                    <form method="POST" asp-controller="Account" asp-action="Register">
                        <div class="section-title">
                            <h3 class="title">Регистрация</h3>
                        </div>
                         <div class="form-group">
                            <input class="input" asp-for="UserName" placeholder="Логин">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                         <div class="form-group">
                            <input class="input" asp-for="Email" placeholder="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                         <div class="form-group">
                            <input class="input" asp-for="Password" placeholder="Пароль">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                         <div class="form-group">
                            <input class="input" asp-for="PasswordConfirm" placeholder="Подтвердить пароль">
                            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                        </div>
                        <div class="section-title">
                            <h3 class="title">Личные данные</h3>
                        </div>
                        <div class="form-group">
                            <input class="input" asp-for="LastName" placeholder="Фамилия">
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group">
                            <input class="input" asp-for="FirstName" placeholder="Имя">
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group">
                            <input class="input" asp-for="Address" placeholder="Адрес">
                            <span class="text-danger" asp-validation-for="Address"></span>
                        </div>
                        <div class="form-group">
                            <input class="input" asp-for="City" placeholder="Город">
                            <span class="text-danger" asp-validation-for="City"></span>
                        </div>
                        <div class="form-group">
                            <input class="input" asp-for="Country" placeholder="Страна">
                            <span class="text-danger" asp-validation-for="Country"></span>
                        </div>
                        <div class="form-group">
                            <input class="input" asp-for="ZIPCode" value="" placeholder="Почтовый индекс">
                            <span class="text-danger" asp-validation-for="ZIPCode"></span>
                        </div>
                        <div class="form-group">
                            <input class="input" asp-for="Telephone" placeholder="Телефон">
                            <span class="text-danger" asp-validation-for="Telephone"></span>
                        </div>

                        <button class="btn btn-dark my-3">Зарегестрироватся</button>
                        <a asp-controller="Account" asp-action="Login" class="m-2" style="font-size: 10pt;">Уже есть аккаунт?</a>
                    </form>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->