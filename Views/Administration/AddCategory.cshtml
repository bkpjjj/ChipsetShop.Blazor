@{
    Layout = "_AdminLayout";
    ViewData["nav"] = 2;
}

<form action="">
    <div class="form-group">
        <label>Имя</label>
        <input class="form-control" v-model="name">
        <span></span>
    </div>
    <div class="form-group">
        <label>Ключ</label>
        <input class="form-control" v-model="key">
        <span></span>
    </div>
    <div class="form-group">
        <label for="image">Изображение</label>
        <input id="image" class="form-control" type="file" accept=".jpg, .jpeg, .png" v-on:change="processFile($event.target)">
    </div>

    <div class="form-group">
        <button v-on:click.prevent="sendData()" class="small-btn bg-success">Добавть</button>
    </div>

    <span>
        <div class="text-danger" v-for="error in errorMessage">{{error}}</div>
        <template v-if="successMsg">
            <div class="text-success">Добавлено</div>
        </template>
    </span>
</form>

@section Scripts
{
<partial name="_ValidationScriptsPartial"></partial>
<script src="~/js/addCategory.js" asp-append-version="true"></script>
}